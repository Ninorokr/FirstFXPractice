         </items>
      </ComboBox>
      <Label fx:id="myLabel" layoutX="39.0" layoutY="84.0" prefHeight="45.0" prefWidth="143.0" />
      <Button fx:id="btnAddItems" layoutX="24.0" layoutY="290.0" mnemonicParsing="false" onAction="#ButtonCombo" prefWidth="174.0" text="Add items" />
      <ListView fx:id="myListView" layoutX="300.0" layoutY="29.0" onMouseClicked="#printListViewItemList" prefHeight="355.0" prefWidth="285.0">
         <items>
            <FXCollections fx:factory="observableArrayList">
               <String fx:value="First Item" />
               <String fx:value="Second Item" />
               <String fx:value="Third Item" />
               <String fx:value="Fourth Item" />
               <String fx:value="Fifth Item" />
               <String fx:value="Sixth Item" />
            </FXCollections>
         </items>
      </ListView>
   </children>
